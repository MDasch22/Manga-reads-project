extends layout.pug

include user-form.pug

block content
  div(class="mangasTitle")
    h1 Mangas
  div(class="gallery")
    each manga in mangas
      div(class="content")
        a(href= `/mangas/${manga.id}`)
          img(src=`${manga.coverImg}` class="img")
          h3(class="mangaCardTitle") #{manga.title}
          h4(class="mangaCardGenre") #{manga.genre}

