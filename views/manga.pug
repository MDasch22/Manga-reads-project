extends home.pug

block content
  body
    img(src=`${manga.coverImg}`, alt="coverImg" style="width:200px")
    h2= `${manga.title}`
    div
    h3= `${manga.author}`
    div
    p= `${manga.description}`
    div
    p= `${manga.genre}`
    div
    p= `${manga.releaseDate}`
    div
    select(name="bsSelector")
     each bookshelf in bookshelves
      option(href=`/mangas/${manga.id}/${bookshelf.id}`) #{bookshelf.name}

    div
    a(href= `/mangas/${manga.id}/reviews`)
      button(type='button') View all reviews
