extends layout.pug

include user-form.pug

block content
  body
    header
      a(href="/")
        img(class="logo" src="/images/mangaReadsLogo.jpg" alt="logo")
      nav
        ul(class="nav__links")
          if locals.authenticated
            //- li
            //-   span(class='navbar-text px-4') Welcome #{user.firstName}!
            li
              a(href=`/users/${user.id}` class="navlinks") MyProfile
            li
              form(class='form-inline pr-4' action='/users/logout' method='post')
                button(class='purpBtn' type='submit') Logout
          else
            li(class="navlinks")
              a(href="/users/login" class="navlinks") Login
            li(class="navlinks")
              a(href="/guest" class="navlinks") Guest
  div(class="guestContainer")
    div(class="guestForm")
      form(action="/guest" method="post")
        div(class="guestForm-group")
          h2(title="guest-entry" id="guest-entry") MangaReads Guest
          img(src="http://nerdist.com/wp-content/uploads/2015/04/dbz-thumbs-up.gif" id="guestGif")
          div(id='guestAccess')
            h3(id="accessTo") As a guest user you will have Access to ...
            div(id="accessList")
              ul(id="ulGuest") Mangas
              div(id="liGuest")
                li All mangas
                li Edit location of manga based on read status
                li Ability to add a review to a specific manga
                li Edit/delete variety of preset reviews for each manga
              ul(id="ulGuest") Bookshelves
              div(id="liGuest")
                li Preset list of added mangas
                li Add and remove mangas from specific bookshelve(s)
          label(id="thoughtsG") Let us know what you think!
          div(id="guestSubmit")
            button(type="submit" class="purpBtn" id="guestUserBttn") Contine as guest
