
extends layout.pug

include user-form.pug

block content
  body
    header
      a(href="/")
        img(class="logo" src="/images/mangaReadsLogo.jpg" alt="logo")
      nav
        ul(class="nav__links")
          if locals.authenticated
            //- li
            //-   span(class='navbar-text px-4') Welcome #{user.firstName}!
            li
              a(href=`/users/${user.id}` class="navlinks") MyProfile
            li
              form(class='form-inline pr-4' action='/users/logout' method='post')
                button(class='purpBtn' type='submit') Logout
          else
            li(class="navlinks")
              a(href="/users/login" class="navlinks") Login
            li(class="navlinks")
              a(href="/guest" class="navlinks") Guest
  h3= `${bookshelves[0].User.firstName}'s Bookshelves`
  a(href= `/users/${bookshelves[0].User.id}/bookshelves/${bookshelves[0].id}`) Want To Read
  div
  a(href= `/users/${bookshelves[1].User.id}/bookshelves/${bookshelves[1].id}`) Currently Reading
  div
  a(href= `/users/${bookshelves[2].User.id}/bookshelves/${bookshelves[2].id}`) Read
  div
