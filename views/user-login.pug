extends layout.pug
include user-form.pug

block content
  +validationErrorSummary(errors)
  form(class='user-login' action='/users/login' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Email Address', 'email', email)
    +field('Password', 'password', null, 'text')
    div(class='py-4')
      button(type='submit' class='purpBtn') Login
      a(href='/' class='btn btn-warning ml-2') Cancel
  div(class='already-have-acc')
    p: a(href='/users/register') Don't have an account?
